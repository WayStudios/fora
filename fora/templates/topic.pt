<metal:main use-macro="load: layout.pt">
  <metal:style fill-slot="style">
  </metal:style>
  <metal:content fill-slot="content">
    <!-- Breadcrumb -->
    <div id="container-breadcrumb" class="container">
      <ol id="breadcrumb" class="breadcrumb">
        <li><a href="${request.application_url}/">Home</a></li>
        <li class="active">Topic ${topic.subject}</li>
      </ol>
    </div>

    <div id="panel-threads" class="panel panel-default">
      <!-- Default panel contents -->
      <div class="panel-heading">Topic ${topic.subject}</div>

      <!-- <div class="panel-body">
        <p>Here lies the available threads.</p>
      </div> -->

      <!-- List group -->
      <div id="list-thread" class="list-group"></div>

      <div class="panel-footer">Come back for more!</div>
    </div>

    <div id="panel-reply-topic" class="panel panel-default">
      <!-- Default panel contents -->
      <div class="panel-heading">Reply topic</div>

      <div class="panel-body">
        <form id="form-reply-topic">
          <div class="form-group">
            <input type="text" id="input-subject" class="form-control" placeholder="Subject" required>
          </div>
          <div class="form-group">
            <textarea id="textarea-content" class="form-control" placeholder="Type your thread contents here." required></textarea>
          </div>
          <div class="checkbox">
            <label>
              <input id="checkbox-accept-policies" type="checkbox"> I accept the forum policies.
            </label>
          </div>
        </form>
      </div>

      <div class="panel-footer">
        <button id="button-reply-topic-submit" type="button" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </metal:content>
  <metal:extra fill-slot="extra">
    <script src="${request.static_url('fora:static/js/fora.topic.js')}"></script>
  </metal:extra>
</metal:main>
