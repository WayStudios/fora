<metal:main use-macro="load: layout.pt">
  <metal:style fill-slot="style">
    <style>
      #panel-notfound .panel-body {
        text-align: center;
      }
    </style>
  </metal:style>
  <metal:content fill-slot="content">
    <!-- Breadcrumb -->
    <div id="container-breadcrumb" class="container">
      <ol id="breadcrumb" class="breadcrumb">
        <li><a href="${request.application_url}/">Home</a></li>
        <li class="active">403 Forbidden</li>
      </ol>
    </div>

    <div id="panel-notfound" class="panel panel-default">
      <!-- Default panel contents -->
      <div class="panel-heading">403 Forbidden</div>

      <div class="panel-body">
        <p>Well done!</p>
        <p>You have found a secret.</p>
        <p>Now, please leave.</p>
        <p>We have nothing to show you at this time.</p>
      </div>

      <div class="panel-footer">Exception</div>
    </div>
  </metal:content>
</metal:main>
