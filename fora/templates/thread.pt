<metal:main use-macro="load: layout.pt">
  <metal:style fill-slot="style">
  </metal:style>
  <metal:content fill-slot="content">
    <!-- Breadcrumb -->
    <div id="container-breadcrumb" class="container">
      <ol id="breadcrumb" class="breadcrumb">
        <li><a href="${request.application_url}/">Home</a></li>
        <li class="active">Thread ${thread.subject}</li>
      </ol>
    </div>

    <div id="panel-thread" class="panel panel-default">
      <!-- Default panel contents -->
      <div class="panel-heading">Thread ${thread.subject}</div>

      <div class="panel-body">
        <div class="row">
          <div class="col-xs-3 col-sm-2 col-md-1">
            <img class="img-responsive" data-src="holder.js/168x168/auto/social/font:FontAwesome/text:&#xF007;/size:64" alt="Avatar">
          </div>
          <div class="col-xs-9 col-sm-10 col-md-11">
            <h4>${thread.subject}</h4>
            <p>${thread.content}</p>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-3 col-sm-2 col-md-1">
            <h5 style="text-align:center;"><a href="${request.application_url}/user/${thread.author}">${thread.author}</a></h5>
          </div>
          <div class="col-xs-9 col-sm-10 col-md-11">
            <h6 style="text-align:right;"> created: ${thread.create_date} updated: ${thread.update_date}</h6>
          </div>
        </div>
      </div>

      <div class="panel-footer">Come back for more!</div>
    </div>
  </metal:content>
  <metal:extra fill-slot="extra">
  </metal:extra>
</metal:main>
