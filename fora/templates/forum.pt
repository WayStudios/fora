<!DOCTYPE html>
<html lang="${request.locale_name}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="fora">
    <meta name="author" content="Xu [xw901103@gmail.com]">
    <link rel="shortcut icon" href="${request.static_url('fora:static/pyramid-16x16.png')}">

    <title>${fora_site_name} - Forum ${forum.title}</title>

    <!-- bootstrap core CSS -->
    <link href="${request.static_url('fora:static/css/bootstrap.min.css')}" rel="stylesheet">

    <!-- Font Awesome CSS -->
    <link href="${request.static_url('fora:static/css/font-awesome.min.css')}" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="${request.static_url('fora:static/css/bootstrap-themes/superhero.min.css')}" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="${request.static_url('fora:static/js/html5shiv.min.js')}"></script>
      <script src="${request.static_url('fora:static/js/respond.min.js')}"></script>
    <![endif]-->

    <style>
      #container-carousel-thread,
      #container-breadcrumb,
      #container-panel-topics,
      #container-panel-create-topic {
        padding-left: 0;
        padding-right: 0;
      }

      #carousel-thread {
        margin-top: 61px;
      }

      #breadcrumb {
        margin-top: 21px;
      }
    </style>
  </head>
  <body>
    <nav id="navbar-top" class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="${request.application_url}/">${fora_site_name}</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="${request.application_url}/">Home</a></li>
            <li><a href="${request.application_url}/page/about">About</a></li>
            <li><a href="${request.application_url}/page/contact">Contact</a></li>
          </ul>
          <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Search">
            </div>
            <!-- <button type="submit" class="btn btn-default">Submit</button> -->
          </form>
          <ul class="nav navbar-nav navbar-right">
            <li><a href="#" data-toggle="modal" data-target="#modal-login">Login</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <div id="container-carousel-thread" class="container">

      <!-- Carousel
      ================================================== -->
      <div id="carousel-thread" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <li data-target="#carousel-thread" data-slide-to="0" class="active"></li>
          <li data-target="#carousel-thread" data-slide-to="1"></li>
          <li data-target="#carousel-thread" data-slide-to="2"></li>
        </ol>
        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
          <div class="item active">
            <img data-src="holder.js/1170x240" alt="First slide">
            <div class="container">
              <div class="carousel-caption">
                <h1>Hot topic 1</h1>
                <p>Here is the brief of hot topic 1.</p>
                <p><a class="btn btn-lg btn-primary" href="#" role="button">Take a peak</a></p>
              </div>
            </div>
          </div>
          <div class="item">
            <img data-src="holder.js/1170x240" alt="Second slide">
            <div class="container">
              <div class="carousel-caption">
                <h1>Hot topic 2</h1>
                <p>Here is the brief of hot topic 2.</p>
                <p><a class="btn btn-lg btn-primary" href="#" role="button">Learn more</a></p>
              </div>
            </div>
          </div>
          <div class="item">
            <img data-src="holder.js/1170x240" alt="Third slide">
            <div class="container">
              <div class="carousel-caption">
                <h1>Hot topic 3</h1>
                <p>Here is the brief of hot topic 3.</p>
                <p><a class="btn btn-lg btn-primary" href="#" role="button">Browse threads</a></p>
              </div>
            </div>
          </div>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-thread" role="button" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-thread" role="button" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>

      </div><!-- /.carousel -->

    </div>

    <!-- Breadcrumb -->
    <div id="container-breadcrumb" class="container">
      <ol id="breadcrumb" class="breadcrumb">
        <li><a href="${request.application_url}/">Home</a></li>
        <li class="active">Forum ${forum.title}</li>
      </ol>
    </div>

    <div id="container-panel-topics" class="container">

      <div id="panel-topics" class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">Forum ${forum.title}</div>

        <div class="panel-body">
          <p>${forum.description}</p>
        </div>

        <!-- List group -->
        <div id="list-topic" class="list-group"></div>

        <div class="panel-footer">Come back for more!</div>
      </div>

    </div>

    <div id="container-panel-create-topic" class="container">

      <div id="panel-create-topic" class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">Create topic</div>

        <div class="panel-body">
          <form id="form-create-topic">
            <div class="form-group">
              <input type="text" id="input-subject" class="form-control" placeholder="Subject" required>
            </div>
            <div class="form-group">
              <textarea id="textarea-content" class="form-control" placeholder="Type your topic contents here." required></textarea>
            </div>
            <div class="checkbox">
              <label>
                <input id="checkbox-accept-policies" type="checkbox"> I accept the forum policies.
              </label>
            </div>
          </form>
        </div>

        <div class="panel-footer">
          <button id="button-create-topic-submit" type="button" class="btn btn-primary">Submit</button>
        </div>
      </div>

    </div>

    <footer class="footer">
      <div class="container">
        <p class="text-muted">fora 2015 created by Xu</p>
      </div>
    </footer>

    <!-- Modals -->
    <div class="modal fade" id="modal-login" tabindex="-1" role="dialog" aria-labelledby="modal-login-title" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"><i class="fa fa-times"></i></span></button>
            <h4 class="modal-title" id="modal-login-title">Login</h4>
          </div>
          <div class="modal-body">
            <form id="form-login">
              <div class="form-group">
                <input type="text" id="input-username" class="form-control" placeholder="Username" required autofocus>
              </div>
              <div class="form-group">
                <input type="password" id="input-password" class="form-control" placeholder="Password" required>
              </div>
              <div class="checkbox">
                <label>
                  <input type="checkbox"> Remember me
                </label>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <a href="${request.application_url}/user/register" type="button" class="btn btn-success">Register</a>
            <button type="button" class="btn btn-primary">Submit</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="${request.static_url('fora:static/js/jquery.min.js')}"></script>
    <script src="${request.static_url('fora:static/js/bootstrap.min.js')}"></script>
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="${request.static_url('fora:static/js/ie10-viewport-bug-workaround.js')}"></script>

    <script src="${request.static_url('fora:static/js/holder.min.js')}"></script>

    <script src="${request.static_url('fora:static/js/fora.forum.js')}"></script>

    <!-- Bootlint -->
    <script>
      javascript:(function(){var s=document.createElement("script");s.onload=function(){bootlint.showLintReportForCurrentDocument([]);};s.src="${request.static_url('fora:static/js/bootlint.min.js')}";document.body.appendChild(s)})();
    </script>
  </body>
</html>
