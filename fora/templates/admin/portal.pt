<!DOCTYPE html>
<html lang="${request.locale_name}" metal:define-macro="layout" i18n:domain="fora">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="fora">
    <meta name="author" content="Xu [xw901103@gmail.com]">
    <link rel="shortcut icon" href="${request.static_url('fora:static/favicon.png')}">

    <title>${title}</title>

    <!-- bootstrap core CSS -->
    <link href="${request.static_url('fora:static/css/bootstrap.min.css')}" rel="stylesheet">

    <!-- Font Awesome CSS -->
    <link href="${request.static_url('fora:static/css/font-awesome.min.css')}" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="${request.static_url('fora:static/css/bootstrap-themes/superhero.min.css')}" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="${request.static_url('fora:static/js/html5shiv.min.js')}"></script>
      <script src="${request.static_url('fora:static/js/respond.min.js')}"></script>
    <![endif]-->

    <style>
      #main {
        margin-top: 61px;
      }
      #footer {
        height: 32px;
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
      }
      #alert-login-invalid-credential, #alert-login-success {
        display: none;
      }
    </style>
  </head>
  <body>
    <nav id="navbar-top" class="navbar navbar-default navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <!--<a class="navbar-brand" href="${request.application_url}/admin">${fora_site_name}</a>-->
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <li><a href="${request.application_url}/">${fora_site_name}</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <div id="main" class="container">
      <div id="panel-moderator-login" class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">
          <h3 class="panel-title" i18n:translate="login">Log In</h3>
        </div>

        <div class="panel-body">
          <form id="form-login">
            <div class="form-group">
              <input type="text" id="input-identity" class="form-control" placeholder="Username or E-mail address or UUID" i18n:attributes="placeholder identity" required autofocus>
            </div>
            <div class="form-group">
              <input type="password" id="input-password" class="form-control" placeholder="Password" i18n:attributes="placeholder password" required>
            </div>
            <div class="checkbox" style="display: none;">
              <label>
                <input type="checkbox"><span i18n:translate="remember_me"> Remember me</span>
              </label>
            </div>
          </form>
          <div id="alert-login-invalid-credential" class="alert alert-danger" role="alert" i18n:translate="invalid_credential">Invalid Credential</div>
          <div id="alert-login-success" class="alert alert-success" role="alert" i18n:translate="success">Success</div>
        </div>

        <div class="panel-footer">
          <button id="button-login-submit" type="button" class="btn btn-primary" i18n:translate="submit">Submit</button>
        </div>
      </div>
    </div>

    <metal:footer define-slot="footer" use-macro="load: footer.pt" />

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="${request.static_url('fora:static/js/jquery.min.js')}"></script>
    <script src="${request.static_url('fora:static/js/bootstrap.min.js')}"></script>
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="${request.static_url('fora:static/js/ie10-viewport-bug-workaround.js')}"></script>

    <script src="${request.static_url('fora:static/js/holder.min.js')}"></script>

    <script src="${request.static_url('fora:static/js/fora.moderator.js')}"></script>

    <!-- Bootlint -->
    <script>
      //javascript:(function(){var s=document.createElement("script");s.onload=function(){bootlint.showLintReportForCurrentDocument([]);};s.src="${request.static_url('fora:static/js/bootlint.min.js')}";document.body.appendChild(s)})();
    </script>
  </body>
</html>
