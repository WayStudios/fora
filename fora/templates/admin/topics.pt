<metal:main use-macro="load: layout.pt">
  <metal:content fill-slot="style">
    <style>
      td {
        vertical-align: middle !important;
      }
    </style>
  </metal:content>
  <metal:content fill-slot="content">
    <h2 class="sub-header">Topics</h2>
    <div id="datatable-topics" class="table-responsive"></div>
  </metal:content>
  <metal:extra fill-slot="extra">
    <script src="${request.static_url('fora:static/js/jquery-ui.widget.min.js')}"></script>
    <script src="${request.static_url('fora:static/js/fora.datatable.js')}"></script>
    <script>
      $(document).ready(function() {
        $("#nav-topics").addClass("active");
        $("#datatable-topics").datatable({
          columns: [
            "id",
            "author",
            "subject",
            "is_archived",
            "is_deleted",
            "create_date",
            "update_date"
          ],
          actions: {
            view: false,
            edit: true,
            delete: true
          },
          uri: {
            retrieveEntries: "?action=retrieve_topics",
            retrieveEntry: "?action=retrieve_topic",
            deleteEntry: "?action=delete_topic"
          }
        });
      });
    </script>
  </metal:extra>
</metal:main>
