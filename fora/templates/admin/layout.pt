<!DOCTYPE html>
<html lang="${request.locale_name}" metal:define-macro="layout">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="fora">
  <meta name="author" content="Xu [xw901103@gmail.com]">
  <link rel="shortcut icon" href="${request.static_url('fora:static/favicon.png')}">

  <title>${title}</title>

  <!-- bootstrap core CSS -->
  <link href="${request.static_url('fora:static/css/bootstrap.min.css')}" rel="stylesheet">

  <!-- Font Awesome CSS -->
  <link href="${request.static_url('fora:static/css/font-awesome.min.css')}" rel="stylesheet">

  <!-- Custom styles for this template -->
  <link href="${request.static_url('fora:static/css/bootstrap-themes/superhero.min.css')}" rel="stylesheet">

  <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
  <!--[if lt IE 9]>
      <script src="${request.static_url('fora:static/js/html5shiv.min.js')}"></script>
      <script src="${request.static_url('fora:static/js/respond.min.js')}"></script>
    <![endif]-->

  <style>
    #sidebar {
      position: fixed;
      top: 40px;
      bottom: 32px;
      left: 0px;
      display: block;
      overflow-x: hidden;
      overflow-y: auto;
      padding-left: 0;
      padding-right: 0;
    }
    .nav-sidebar > .active > a {
      color: #ebebeb;
      background-color: #485563;
    }
    #main {
      position: fixed;
      top: 40px;
      bottom: 32px;
    }
    #footer {
      height: 32px;
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
    }
  </style>
  <metal:style define-slot="style" />
</head>

<body>

  <metal:header define-slot="header" use-macro="load: header.pt" />
  <metal:footer define-slot="footer" use-macro="load: footer.pt" />

  <!-- Bootstrap core JavaScript
    ================================================== -->
  <!-- Placed at the end of the document so the pages load faster -->
  <script src="${request.static_url('fora:static/js/jquery.min.js')}"></script>
  <script src="${request.static_url('fora:static/js/bootstrap.min.js')}"></script>
  <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
  <script src="${request.static_url('fora:static/js/ie10-viewport-bug-workaround.js')}"></script>

  <script src="${request.static_url('fora:static/js/holder.min.js')}"></script>
  <metal:extra define-slot="extra" />

  <!-- Bootlint -->
  <script>
    //javascript:(function(){var s=document.createElement("script");s.onload=function(){bootlint.showLintReportForCurrentDocument([]);};s.src="${request.static_url('fora:static/js/bootlint.min.js')}";document.body.appendChild(s)})();
  </script>
</body>

</html>
