<metal:main use-macro="load: ../layout.pt">
  <metal:content fill-slot="style">
    <style>
    </style>
  </metal:content>
  <metal:content fill-slot="content">
    <h2 class="page-header">Create Configuration</h2>
    <form id="form-create-configuration" class="form-horizontal">
      <div class="form-group">
        <label for="input-type" class="col-sm-2 control-label">Type</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="input-type" placeholder="Type" i18n:attributes="placeholder type" required>
        </div>
      </div>
      <div class="form-group">
        <label for="input-name" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="input-name" placeholder="Name" i18n:attributes="placeholder name" required>
        </div>
      </div>
      <div class="form-group">
        <label for="input-value" class="col-sm-2 control-label">Value</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="input-value" placeholder="Value" i18n:attributes="placeholder value" required>
        </div>
      </div>
    </form>
    <button id="submit-form-create-configuration" type="button" class="btn btn-primary" i18n:translate="submit">Submit</button>
  </metal:content>
  <metal:extra fill-slot="extra">
    <script>
      $(document).ready(function() {
        $("#nav-configurations").addClass("active");
      });
    </script>
  </metal:extra>
</metal:main>
